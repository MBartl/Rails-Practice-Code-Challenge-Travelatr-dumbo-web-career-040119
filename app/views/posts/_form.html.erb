<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.label :content %><br>
<%= f.text_area :content, size: '40x20' %>
<br>
<%= f.label :blogger_id, "Blogger" %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
<br>
<%= f.label :blogger_id, "Destination" %>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>
<br>
<br>
<%= f.hidden_field :likes, value: 0, on: :create %>
<%= f.submit %>
<% end %>
